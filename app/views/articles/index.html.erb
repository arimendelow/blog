<h1>Listing articles</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th></th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.text %></td>
			<!-- 'link_to' is one of Rails' built-in view helpers. It creates a hyperlink based on text to display and where to go. -->
			<td><%= link_to 'Show', article_path(article) %></td> 
		</tr>
	<% end %>
</table>
